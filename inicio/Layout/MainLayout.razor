@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            @* Required *@
            <MudThemeProvider />
            <MudPopoverProvider />

            @* Needed for dialogs *@
            <MudDialogProvider />

            @* Needed for snackbars *@
            <MudSnackbarProvider />
        </div>

        <article class="content px-4">
            <MudLayout>
                <MudMainContent>
                    @Body
                </MudMainContent>
            </MudLayout>
        </article>
    </main>
</div>
