@using MudBlazor

<MudDialog MaxWidth="MaxWidth.Small" FullWidth="true">
    <TitleContent> </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.h6">Aqui você pode voltar no tempo e restaurar tarefas que foram excluídas</MudText>
        <MudText Typo="Typo.body1" Color="Color.Primary" class="mt-1">
            Somente as tarefas excluídas aparecerão aqui
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = default!;

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}
